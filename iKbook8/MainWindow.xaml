<Window x:Class="iKbook8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iKbook8"
        mc:Ignorable="d"
        Title="MainWindow" Height="1100" Width="1800" 
        Loaded="OnMainWindowLoaded"
        Activated="OnMainWindowActivated"
        Unloaded="OnMainWindowUnloaded"
        Closing="OnMainWindowClosing"
        >
    <Window.DataContext>
        <local:WndContextData/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox VerticalAlignment="Center"
            Grid.Row="0" 
            Grid.ColumnSpan="3">
            <Grid 
            VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0" x:Name="cmbNovelType" SelectedIndex="2">
                    <ComboBoxItem Content="m.ikbook8.com"></ComboBoxItem>
                    <ComboBoxItem Content="book.qq.com"></ComboBoxItem>
                    <ComboBoxItem Content="m.xbiqugew.com"></ComboBoxItem>
                </ComboBox>
                <!--TextBox Grid.Column="1" x:Name="txtInitURL" Text="https://m.ikbook8.com/book/i116399132/20431977.html"/-->
                <TextBox Grid.Column="1" x:Name="txtInitURL" Text="https://m.xbiqugew.com/book/50761/32248795.html"/>
                
                <Button Grid.Column="3" x:Name="btnInitURL" Content="Load Init URL" Click="btnInitURL_Click"/>
                <Button Grid.Column="5" x:Name="btnAutoDownload" Content="Auto from" Click="btnAutoURL_Click" Margin="0,0,0,2"/>
                <TextBox Grid.Column="6" x:Name="txtPages" Text="100" TextAlignment="Right" PreviewTextInput="PreviewPagesTextInput" DataObject.Pasting="PagesPaste"/>
            </Grid>
        </GroupBox>
        <GroupBox VerticalAlignment="Center"
            Grid.Row="1" 
            Grid.ColumnSpan="3">
            <Grid 
            VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="101.2"/>
                    <ColumnDefinition Width="18.8"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="39.2"/>
                    <ColumnDefinition Width="80.8"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" x:Name="txtCurURL"/>
                <Button Grid.Column="2" x:Name="btnAnalysisCurURL" Content="Analysis Current URL" Click="btnAnalysisCurURL_Click" IsEnabled="{Binding Path=PageLoaded,Mode=TwoWay}" Grid.ColumnSpan="2" />
                <Button Grid.Column="5" x:Name="btnNextPage" Content="Goto Next URL" Click="btnNextPage_Click" IsEnabled="{Binding Path=NextLinkAnalysized,Mode=TwoWay}" Grid.ColumnSpan="2" />
            </Grid>
        </GroupBox>
        <WebBrowser 
            Grid.Row="2" 
            Grid.Column="0"
            LoadCompleted="MainFrameWebLoadCompleted"
            Loaded="MainFrameWebLoaded"
            x:Name="webBrowser" >

        </WebBrowser>

        <Grid
            Grid.Row="2" 
            Grid.Column="2"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <TextBox
                Grid.Row="0" 
                x:Name="txtWebContents" 
                BorderThickness="1" 
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                FontSize="12" FontWeight="Thin">
                <TextBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="CadetBlue"/>
                        <GradientStop Color="LightBlue" Offset="0.7"/>
                    </LinearGradientBrush>
                </TextBox.Background>

            </TextBox>
            <TextBox
                Grid.Row="1" 
                x:Name="txtAnalysizedContents" 
                BorderThickness="1" 
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                FontSize="12" FontWeight="Thin">
            </TextBox>
            <TextBox
                Grid.Row="2" 
                x:Name="txtAggregatedContents" 
                BorderThickness="1" 
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                FontSize="12" FontWeight="Thin">
                <TextBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="CadetBlue"/>
                        <GradientStop Color="LightBlue" Offset="0.7"/>
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>
            <TextBox
                Grid.Row="3" 
                x:Name="txtNextUrl" 
                BorderThickness="1" 
                FontSize="12" FontWeight="Thin">
            </TextBox>
        </Grid>
        <Grid  Grid.Row="3" Grid.ColumnSpan="3" VerticalAlignment="Center" AutomationProperties.HelpText="" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="202" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="txtStatus"  Grid.Column="0" FontSize="12" FontWeight="Thin" Text="{Binding Path=StartBarMsg,Mode=OneWay}" Margin="5,0,2,0" VerticalAlignment="Center"/>
            <Separator Grid.Column="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
            <ProgressBar Height="12" Width="200" x:Name="txtProgress" Grid.Column="2" Value="{Binding Path=ProcessBarValue,Mode=OneWay}" Margin="2,0,10,0"/>
        </Grid>
    </Grid>
</Window>
